            div.second
                div.row
                    div.bigBar.column.col-lg-7
                        h2 GLOBAL DATA
                        div.row
                            div.globalFirst.column.col-sm-6
                                div
                                    h5 TOTAL CASES
                                    p=global.cases
                                div
                                    h5 DEATHS
                                    p=global.deaths
                                div
                                    h5 RECOVERED
                                    p=global.recovered
                            div.globalSecond.column.col-sm-6
                                table.topCountries_main
                                    
                                    tr
                                        th CRITICAL
                                        td=global.critical 
                                    tr
                                        th TODAY CASES
                                        td= global.todayCases
                                    tr
                                        th TODAY DEATHS
                                        td= global.todayDeaths
                                    tr
                                        th ACTIVE
                                        td= global.active
                                    tr
                                        th CRITICAL
                                        td= global.critical
                                    tr
                                        th TESTS
                                        td= global.tests
                                    tr
                                        th CASES PER ONE MILLION
