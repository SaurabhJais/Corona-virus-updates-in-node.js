                                    tr
                                        th DEATHS PER ONE MILLION
                                        td= global.deathsPerOneMillion  
                                    tr
                                        th TESTS PER MILLION
                                        td= global.testsPerOneMillion
                                

                    //- this is for spacing

                    div.col-lg-1  

                    div.topCountries.column.col-lg-4
                        h4 Top Cases
                        table.topCountries_main
                            tr  
                                th Index
                                th Country
                                th Cases
                           
                            each val, index in sortedData.slice(0, 10)
                                tr
                                    td= index+1
                                    td= val.country
                                    td= val.cases
            

                div.searchBox  
                    form(action="/search", method="GET")
                        br
                        input(type="search", name="country", minlength="3" placeholder="Enter country name to search")
                        br
                        br
                        input(type="submit", value="Search").submitClass

                div.third
                     table.topCountries_main.anotherClass
                        tr
                            th Index
                            th Country
                            th Total cases
                            th Total deaths
                            th Today cases
                            th Today deaths
                            th Recovered
                            th Active
                            th Critical
                            th Tests
                            th Case / 1m
                            th Deaths / 1m
                            th Tests / 1m
                        each val, index in sortedData
                            tr
                                td= index+1
                                td 
                                    a(href=`/data/${val.country}`)=val.country
                                td= val.cases
                                td= val.deaths
                                td= val.todayCases
                                td= val.todayDeaths
                                td= val.recovered
                                td= val.active
                                td= val.critical
                                td= val.tests
                                td= val.casesPerOneMillion
                                td= val.deathsPerOneMillion
                                td= val.testsPerOneMillion






